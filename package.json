		"lodash.isplainobject": "^4.0.6"
	},
	"peerDependencies": {
		"react": "^18.0.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
